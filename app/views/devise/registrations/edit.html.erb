<div class="devise-big light_window">
  <h1 class="devise-aich-one"><%= current_user.name.to_s %>'s Profile</h1>
  <div class="double">
    <div class="my-infos">
      <h2 class="devise-aich-two-point-two">Information</h2>
      <div class="circular-image-2">
        <% if current_user&.picture&.attached? %>
          <%= image_tag current_user.picture, class: "user-pic-2" %>
        <% end %>
      </div>
      <p class="my-info">Name: <%= current_user.name %></p>
      <p class="my-info">Motto: <%= current_user.motto %></p>
      <p class="my-info">E-mail: <%= current_user.email %></p>
    </div>
    <div class="my-edit">
    <h2 class="devise-aich-two">Edit Profile</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field overwrite">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="field overwrite">
            <em>Currently waiting confirmation for: <%= resource.unconfirmed_email %></em>
          </div>
        <% end %>
        <div class="field overwrite">
          <%= f.label :password %> <i>(to not change, leave blank)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
        <div class="field overwrite">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="field overwrite">
          <%= f.label :current_password %> <i>(needed for changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
        <div class="field overwrite">
          <%= f.label :name %><br />
          <%= f.text_field :name %>
        </div>
        <div class="field overwrite">
          <%= f.label :motto %><br />
          <%= f.text_field :motto %>
        </div>
        <div class="field overwrite">
          <%= f.label :picture %><i> (File must be 5 MB or less.)</i><br />
          <%= f.file_field :picture %>
        </div>
        <div class="actions bowton lt-three">
          <%= f.submit "Update" %>
        </div>
      <% end %>
      <div class="field overwrite">
        <h3>Cancel my account</h3>
        <p class="bowton lt-three"><%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure you want to delete your account?", turbo_confirm: "Are you sure?" }, method: :delete, class: "cancel-account-button" %></p>
      </div>
        <div class="field overwrite">
        <h3>Change my email</h3>
        <p class="bowton lt-three"><%= button_to "Change my email", registration_path(resource_name), data: { confirm: "Are you sure you want to change your email?", turbo_confirm: "Are you sure?" }, method: :delete, class: "cancel-account-button" %></p>
      </div>
    </div>
  </div>
</div>


