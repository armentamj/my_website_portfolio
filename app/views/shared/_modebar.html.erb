<div class="big-mode-three modus" data-controller="dark-mode">
  <% if current_user&.picture&.attached? %>
    <div class="circular-image">
      <%= image_tag current_user.picture, class: "user-pic" %>
    </div>
  <% end %>
  <p>
    <i class="fas fa-moon navigation-knopfe-three ldr bowton darky" title="Dark Mode" data-mode="dark" data-action="click->dark-mode#dark"></i>
  </p>
  <p>
    <i class="fas fa-sun navigation-knopfe-three ldr bowton lighty show" title="Light Mode" data-mode="light" data-action="click->dark-mode#dark"></i>
  </p>
  <p>
    <i class="fas fa-umbrella-beach navigation-knopfe-three ldr bowton relaxy" title="Relax Mode"data-mode="relax" data-action="click->dark-mode#dark"></i>
  </p>
</div>
