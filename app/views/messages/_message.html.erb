<div id="message_<%= message.id %>" class="message <%= message.user_id == current_user.id ? 'me' : 'friend' %>" data-user-id="<%= message.user_id %>" data-message-id="<%= message.id %>">
  <p><%= message.body %></p>
  <small><%= message.formatted_timestamp %></small>
  <% if message.user_id == current_user.id %>
    <div class="status">
      <%= message_status_indicator(message.status) %>
    </div>
  <% end %>
</div>